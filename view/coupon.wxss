.coupon {
  width: 100%;
  display: flex;
  height: 200rpx;
  margin-top: 20rpx;
  background-color: #fff;
}

.coupon .lside {
  height: 198rpx;
  width: 108rpx;
  border: 1rpx solid #1aaade;
  position: relative;
}

.coupon .lside text {
  display: block;
  color: #353535;
  font-size: 36rpx;
  width: 36rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  height: 118rpx;
  line-height: 40rpx;
}

.coupon .center {
  flex: 1;
  height: 198rpx;
  border-top: 1rpx solid #1aaade;
  border-bottom: 1rpx solid #1aaade;
  box-sizing: padding-box;
  padding: 0 20rpx;
}

.coupon .center .title {
  border-bottom: 1px dashed #999;
  font-size: 24rpx;
  color: #666;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 8rpx;
}

.coupon .center .content text {
  font-size: 22rpx;
  color: #999;
  display: block;
}

.coupon .center .content text:first-child {
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
}

.coupon .center .content text:last-child {
  height: 40rpx;
  line-height: 40rpx;
}

.coupon .rside {
  background-color: #1aaade;
  height: 198rpx;
  width: 220rpx;
  border-top: 1rpx solid #1aaade;
  border-bottom: 1rpx solid #1aaade;
  overflow: hidden;
  position: relative;
}

.coupon .rside>text {
  color: #fff;
  display: block;
  width: 100%;
  height: 198rpx;
  line-height: 198rpx;
  padding-right: 15rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 72rpx;
}

.coupon .rside>text text {
  font-size: 30rpx;
  color: #fff;
}

.coupon .rside .arc {
  width: 30rpx;
  height: 30rpx;
  background-color: #efeff4;
  border-radius: 50%;
  position: absolute;
  right: -15rpx;
  top: 8rpx;
}

.coupon .rside .arc:nth-child(2) {
  top: 46rpx;
}

.coupon .rside .arc:nth-child(3) {
  top: 84rpx;
}

.coupon .rside .arc:nth-child(4) {
  top: 122rpx;
}

.coupon .rside .arc:nth-child(5) {
  top: 160rpx;
}
