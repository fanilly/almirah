/**app.wxss**/

@import 'styles/weui.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  color: #353535;
}

page {
  background-color: #f0f0f0;
}


