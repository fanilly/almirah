/* components/lorder/lorder.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  color: #353535;
}


/* 共用 */

.f28 {
  font-size: 28rpx;
}

.f26 {
  font-size: 26rpx;
}

.f24 {
  font-size: 24rpx;
}

.f22 {
  font-size: 22rpx;
}

.gray01 {
  color: #353535;
}

.gray02 {
  color: #444;
}

.gray03 {
  color: #555;
}

.gray04 {
  color: #666;
}

.gray05 {
  color: #999;
}

.red-bg {
  background-color: #e8380d;
  color: #fff;
}

.red-color {
  color: #e8380d;
}


/* 未获取到数据时显示的按钮 */

.btn {
  width: 180rpx;
  height: 52rpx;
  line-height: 52rpx;
  box-shadow: 0 2px 8px #999;
  border-radius: 2px;
  background-image: linear-gradient(to right, #1aaade, #2e8fde);
  text-align: center;
  display: block;
  color: #fff;
  padding: 12rpx 18rpx;
  margin-top: 30rpx;
}

.btn-hover {
  background-color: #0996c9;
}


/*加载*/

.loading-box {
  margin-top: 50rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 2px 4px #ccc;
}

.loadbox {
  height: 280rpx;
  margin-top: 200rpx;
}


/*订单列表*/

.order-list {
  width: 100%;
  box-sizing: border-box;
}

.order-list-item {
  background-color: #fff;
  padding: 15rpx 30rpx;
  border-radius: 4px;
  margin-bottom: 15rpx;
}

.o-header {
  display: flex;
  border-bottom: 1px dashed #e2e2e2;
  line-height: 80rpx;
  margin-bottom: 15rpx;
}

.o-header>view:first-child {
  flex: 1;
}

.o-header>view:last-child {
  width: 300rpx;
  text-align: right;
}

.o-header .pointer {
  display: inline-block;
  margin-right: 10rpx;
}

.o-body>view {
  display: flex;
  line-height: 50rpx;
}

.item-lside {
  flex: 1;
}

.item-rside {
  width: 300rpx;
  text-align: right;
}

.o-footer {
  text-align: right;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
}

.o-btn {
  display: inline-block;
  font-size: 24rpx;
  padding: 0 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #e2e2e2;
  border-radius: 30rpx;
  color: #999;
  margin-left: 15rpx;
}


/*选择出售商品*/

.goods-box {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  height: 100%;
  background-color: rgba(255, 255, 255, .8);
  z-index: 9999;
  box-sizing: border-box;
  padding: 15rpx;
}

.goods-control {
  position: fixed;
  width: 96%;
  background-color: #fff;
  height: 108rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  box-shadow: 0 0 20rpx #ccc;
  border-radius: 10rpx;
  padding: 10rpx 0;
}

.goods-item {
  display: flex;
  padding-right: 15rpx;
  margin-top: 15rpx;
}

.goods-list-box {
  white-space: nowrap;
}

.goods-list-box view {
  display: inline-block;
  padding: 20rpx 30rpx;
}
