/* components/mGoodsLists/mGoodsLists.wxss */

:host {
  width: 100%;
}
@import '../../app.wxss';

.pro-list-box {
  width: 100%;
  padding: 0 15rpx;
  box-sizing: border-box;
  column-count: 2;
  column-gap: 15rpx;
  font-size: 0;
}

.pro-list-box .pro-item {
  overflow: hidden;
  border-radius: 4rpx;
  background-color: #fff;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  transition: all .4s ease-in-out;
  width: 100%;
  display: inline-block;
}

.pro-list-box .pro-item image {
  width: 100%;
}

.pro-list-box .pro-title {
  margin: 12rpx 0 8rpx;
}

.pro-list-box .info {
  width: 100%;
  padding: 0 15rpx;
  box-sizing: border-box;
}

.pro-list-box .info>view {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
