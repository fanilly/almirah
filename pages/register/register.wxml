<!--pages/register/register.wxml-->
<view class="container">
  <image src="../../assets/lg-logo.png" style="width: 228rpx;height: 185rpx;margin-top:100rpx;"></image>
  <view class="title f36 gray02">新会员免费洗衣一单</view>
  <form bindsubmit="formSubmit" class="content">
    <input bindinput="recordPhoneNumber" type="number" maxlength="11" focus="{{isFocus}}" confirm-type="done" placeholder="请输入手机号" placeholder-class="placeholder" name="phonenumber" />
    <view class="verf-code">
      <input type="number" maxlength="6" placeholder="请输入验证码" placeholder-class="placeholder" name="verfcode" />
      <text bindtap="handleGetVerf" class="{{!being?'main-bgi':''}}" style="background-color:{{being?'#ccc':'#02c1c9'}} ;">{{being?time:'获取验证码'}}</text>
    </view>
    <view class="main-bgi msg">会员权益</view>
    <button formType="submit" class="main-bgi">立即注册</button>
  </form>
</view>
