/* pages/almirah/almirah.wxss */

.btn-list {
  width: 100%;
  height: 180rpx;
  display: flex;
  background-color: #fff;
  border-top-right-radius: 0;
  border-top-left-radius: 0;
  box-shadow: 0 4rpx 10rpx #ccc;
}

.btn-list navigator {
  padding-top: 32rpx;
  flex: 1;
  text-align: center;
  position: relative;
}

.btn-list navigator .pointer {
  width: 18rpx;
  height: 18rpx;
  position: absolute;
  right: 50rpx;
}

.btn-list navigator .f28 {
  line-height: 28rpx;
}



/*title*/

.hot-title {
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
  display: flex;
  height: 70rpx;
}

.hot-title image {
  margin-top: 22rpx;
}

.hot-title text {
  line-height: 70rpx;
  padding-left: 10rpx;
}



/*订单列表*/

.order-list {
  width: 100%;
  box-sizing: border-box;
  /*padding: 0 15rpx;*/
}

.order-list-item {
  background-color: #fff;
  padding: 15rpx;
  border-radius: 4px;
}

.o-header {
  display: flex;
  border-bottom: 1px dashed #e2e2e2;
  line-height: 80rpx;
  margin-bottom: 15rpx;
}

.o-header>view:first-child {
  flex: 1;
}

.o-header>view:last-child {
  width: 300rpx;
  text-align: right;
}

.o-header .pointer {
  display: inline-block;
  margin-right: 10rpx;
}

.o-body>view {
  display: flex;
  line-height: 50rpx;
}

.item-lside {
  flex: 1;
}

.item-rside {
  width: 300rpx;
  text-align: right;
}

.o-footer {
  text-align: right;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
}

.o-btn {
  display: inline-block;
  font-size: 24rpx;
  padding: 0 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #e2e2e2;
  border-radius: 30rpx;
  color: #999;
  margin-left: 15rpx;
}

.order {
  position: fixed;
  bottom: 15rpx;
  right: 15rpx;
}
