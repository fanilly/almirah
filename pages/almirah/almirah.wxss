/* pages/almirah/almirah.wxss */

.btn-list {
  width: 100%;
  height: 180rpx;
  display: flex;
  background-color: #fff;
  border-top-right-radius: 0;
  border-top-left-radius: 0;
  box-shadow: 0 4rpx 10rpx #ccc;
}

.btn-list navigator {
  padding-top: 32rpx;
  flex: 1;
  text-align: center;
  position: relative;
}

.btn-list navigator .pointer {
  width: 18rpx;
  height: 18rpx;
  position: absolute;
  right: 50rpx;
}

.btn-list navigator .f28 {
  line-height: 28rpx;
}


/*title*/

.hot-title {
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
  display: flex;
  height: 70rpx;
}

.hot-title image {
  margin-top: 22rpx;
}

.hot-title text {
  line-height: 70rpx;
  padding-left: 10rpx;
}


/*订单列表*/

.order {
  position: fixed;
  bottom: 15rpx;
  right: 15rpx;
}

.mask {
  position: fixed;
  z-index: 10000;
  background-color: #fff;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%
}
