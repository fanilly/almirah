/* pages/almirah/almirah.wxss */

.btn-list {
  width: 100%;
  height: 180rpx;
  display: flex;
  background-color: #fff;
  border-top-right-radius: 0;
  border-top-left-radius: 0;
  box-shadow: 0 4rpx 10rpx #ccc;
}

.btn-list navigator {
  padding-top: 32rpx;
  flex: 1;
  text-align: center;
  position: relative;
}

.btn-list navigator .pointer {
  width: 18rpx;
  height: 18rpx;
  position: absolute;
  right: 50rpx;
}

.btn-list navigator .f28 {
  line-height: 28rpx;
}


/*title*/

.hot-title {
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
  display: flex;
  height: 70rpx;
}

.hot-title image {
  margin-top: 22rpx;
}

.hot-title text {
  line-height: 70rpx;
  padding-left: 10rpx;
}


/*订单列表*/

.order {
  position: fixed;
  bottom: 15rpx;
  right: 15rpx;
}

.loading-box {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 2px 4px #ccc;
}

.loadbox {
  height: 280rpx;
}

.btn {
  text-align: center;
  display: block;
  color: #fff;
  padding: 12rpx 18rpx;
  margin-top: 30rpx;
}

.goods-box {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  height: 100%;
  background-color: rgba(255, 255, 255, .8);
  z-index: 9999;
  box-sizing: border-box;
  padding: 15rpx;
}

.goods-control {
  position: fixed;
  width: 96%;
  background-color: #fff;
  height: 120rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  box-shadow: 0 0 20rpx #ccc;
  border-radius: 10rpx;
  padding: 10rpx 0;
}

.goods-item {
  display: flex;
  padding-right: 15rpx;
  margin-top: 15rpx;
}

.goods-list-box {
  white-space: nowrap;
}

.goods-list-box view {
  display: inline-block;
  padding: 20rpx 30rpx;
}
