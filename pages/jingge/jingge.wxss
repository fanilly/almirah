/* pages/copartner/copartner.wxss */

.header {
  width: 100%;
  background-color: #fff;
  box-shadow: 0 3px 8px #e2e2e2;
  position: fixed;
  top: 0;
  padding: 0 56rpx 0 30rpx;
  box-sizing: border-box;
  z-index: 999;
  display: flex;
  height: 100rpx;
}

.header > view:nth-child(1),
.header > view:nth-child(3){
  flex: 1;
  line-height: 100rpx;
  text-align: center;
}

.header > view:nth-child(2){
  line-height: 100rpx;
  width: 60rpx;
  text-align: center;
}

.header > view:nth-child(4){
  width: 160rpx;
}

.wapper view {
  display: inline-block;
  line-height: 100rpx;
  margin-right: 40rpx;
  position: relative;
}

.wapper view text {
  display: block;
  width: 40rpx;
  height: 40rpx;
  background-color: #1aaade;
  position: absolute;
  top:0;
  right: -30rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.main {
  column-count: 3;
  column-gap: 15rpx;
  padding-top: 15rpx;
}

.btn {
  margin:0;
  border-radius: 50rpx;
  margin: 15rpx 5rpx 0 0 ;
  padding:10rpx 12rpx;
  text-align: center;
  color: #fff;
  display: block;
}
