/* pages/businessAdmin/businessAdmin.wxss */

.btn {
  width: 180rpx;
  height: 52rpx;
  line-height: 52rpx;
  box-shadow: 0 2px 8px #999;
  border-radius: 2px;
  background-image: linear-gradient(to right, #1aaade, #2e8fde);
  text-align: center;
  display: block;
  color: #fff;
  padding: 12rpx 18rpx;
  margin-top: 30rpx;
}

.btn-hover {
  background-color: #0996c9;
}

/*加载*/

.loading-box {
  margin-top: 50rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 2px 4px #ccc;
}

.loadbox {
  height: 200rpx;
  margin-top: 200rpx;
}


/*订单列表*/

.order-list {
  width: 100%;
  box-sizing: border-box;
}

.order-list-item {
  background-color: #fff;
  padding: 15rpx;
  border-radius: 4px;
  margin-bottom: 15rpx;
}

.o-header {
  display: flex;
  border-bottom: 1px dashed #e2e2e2;
  line-height: 80rpx;
  margin-bottom: 15rpx;
}

.o-header>view:first-child {
  flex: 1;
}

.o-header>view:last-child {
  width: 300rpx;
  text-align: right;
}

.o-header .pointer {
  display: inline-block;
  margin-right: 10rpx;
}

.o-body>view {
  display: flex;
  line-height: 50rpx;
}

.item-rside {
  width: 300rpx;
  text-align: right;
}

.o-footer {
  text-align: right;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
}

.o-btn {
  display: inline-block;
  font-size: 24rpx;
  padding: 0 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #e2e2e2;
  border-radius: 30rpx;
  color: #999;
  margin-left: 15rpx;
}

.ddd {
  line-height: 20rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
}

.o-btn1 {
  border-color: #1aaade;
  color: #1aaade;
}


/*选择出售商品*/

.goods-box {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  z-index: 9999;
  box-sizing: border-box;
  padding: 15rpx;
}

.goods-control {
  position: fixed;
  width: 96%;
  background-color: #fff;
  height: 108rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  box-shadow: 0 0 20rpx #ccc;
  border-radius: 10rpx;
  padding: 2rpx 0;
}

.goods-item {
  display: flex;
  padding-right: 15rpx;
  margin-top: 15rpx;
}

.goods-list-box {
  white-space: nowrap;
}

.goods-list-box view {
  display: inline-block;
  padding: 20rpx 50rpx;
  border-right: 1px solid #f0f0f0;
}

.goods-list-box view:last-child {
  border-right: none;
}


