/* pages/productDetail/productDetail.wxss */

.infos {
  background-color: #fff;
  padding: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.title {
  border-bottom: 1px solid #e2e2e2;
  line-height: 40rpx;
  padding: 0 8rpx 15rpx;
  margin-bottom: 15rpx;
}

.double-column {
  display: flex;
  padding: 0 8rpx;
}

.double-column view {
  flex: 1;
  line-height: 40rpx;
}

.double-column view text {
  padding-left: 20rpx;
}

.desc-t {
  padding: 0 8rpx;
}

.desc {
  text-indent: 2em;
  line-height: 36rpx;
  padding: 0 8rpx;
}

.details {
  width: 100%;
  margin-top: 15rpx;
}

.details image {
  display: block;
}

.details {
  background-color: #fff;
}

.d-title {
  background-color: #fff;
  text-align: left;
  vertical-align: middle;
  padding: 15rpx 15rpx 30rpx;
  box-sizing: border-box;
}

.d-title image {
  display: inline-block;
}

.d-title text {
  padding-left: 10rpx;
}

.recommend {
  margin: 15rpx 0;
  width: 100%;
}

.footer {
  width: 100%;
  height: 120rpx;
  position: fixed;
  /*background-image: linear-gradient(to bottom, rgba(26, 170, 220, 0.6), rgba(0, 0, 0, 0), rgba(0, 0, 0, 0));*/
  background-color: #fff;
  /*background-image: linear-gradient(to bottom,#fff,rgba(255,255,255,0.1));*/
  bottom: 0;
  left: 0;
  box-shadow:  0 0 20px rgba(0,0,0,.2);
}

.footer view {
  width: 260rpx;
  border-radius: 40rpx;
  margin:20rpx;
  height: 80rpx;
  text-align:center;
  line-height: 80rpx;
  float: right;
  box-shadow: 0 0 10px rgba(0,0,0,.1);
}
.footer .add-trolley {
  height: 72rpx;
  line-height: 72rpx;
  background-color: rgba(26,170,222,.2);
  background-image: none;
  border:4rpx solid #1aaade;
  color:#1aaade;
}
.trolley {
  position: fixed;
  bottom: 135rpx;
  right: 15rpx;
}

.notice {
  line-height: 40rpx;
  padding: 15rpx;
  text-align: justify;
}

.notice .f28 {
  padding-bottom: 15rpx;
}

.no-detail {
  padding: 0 15rpx 20rpx 15rpx;
}
