/* pages/mall/mall.wxss */

.header {
  width: 100%;
  height: 80rpx;
  display: flex;
  position: fixed;
  top: 0;
  box-sizing: border-box;
  z-index: 9999;
  padding: 15rpx 0;
  /*background-image: linear-gradient(to bottom, rgba(26, 170, 220, 0.6), rgba(0, 0, 0, 0), rgba(0, 0, 0, 0));*/
}


