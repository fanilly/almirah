}
*/

.header>view {
  width: 90rpx;
  position: absolute;
  right: 0;
}

.msg-box {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(0, 0, 0, .3);
  border-radius: 16rpx;
  text-align: center;
  position: relative;
}

.msg-box .pointer {
  position: absolute;
  right: 0;
  top: 0;
}

.header image {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
}

.swiper-wapper {
  width: 100%;
  box-sizing: border-box;
}

.carousel {
  width: 100%;
  overflow: hidden;
}

.carousel image {
  width: 100%;
}

.wx-swiper-dot {
  width: 22rpx !important;
  height: 6rpx !important;
  border-radius: 0 !important;
}

.hot-title {
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
  display: flex;
  height: 70rpx;
}

.hot-title image {
  margin-top: 20rpx;
}

.hot-title text {
  line-height: 70rpx;
  padding-left: 10rpx;
}

.pro-list-box {
  width: 100%;
  padding: 0 15rpx;
  box-sizing: border-box;
  column-count: 2;
  column-gap: 15rpx;
  font-size: 0;
}

.pro-item {
  overflow: hidden;
  border-radius: 4rpx;
  background-color: #fff;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  transition: all .4s ease-in-out;
  width: 100%;
  display: inline-block;
}

.pro-item image {
  width: 100%;
}

.pro-title {
  margin: 12rpx 0 8rpx;
}

.info {
  width: 100%;
  padding: 0 15rpx;
  box-sizing: border-box;
}

.info>view {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order {
  position: fixed;
  right: 15rpx;
  bottom: 15rpx;
}

.loading-box {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 2px 4px #ccc;
  margin-top: 50rpx;
}

.nav-wapper {
  display: flex;
  background-color: #fff;
  width: 100%;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
}

.nav-item {
  flex: 1;
  text-align: center;
}

.classification {
  width: 100%;
  padding: 0 15rpx;
  box-sizing: border-box;
  column-count: 2;
  column-gap: 15rpx;
  font-size: 0;
  margin-top: 15rpx;
}

.classification navigator {
  overflow: hidden;
  border-radius: 4rpx;
  background-color: #fff;
  margin-bottom: 15rpx;
  transition: all .4s ease-in-out;
  width: 100%;
  display: inline-block;
}

.classification image {
  width: 100%;
}
