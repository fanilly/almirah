/* pages/sell/sell.wxss */

page {
  background-color: #fff;
}

.block-title {
  border-bottom: 1px solid #eee;
  margin-bottom: 16rpx;
}

.inputs {
  display: flex;
  padding: 0 20rpx;
  align-items: center;
  line-height: 80rpx;
}

.inputs input {
  border-bottom: 1px solid #eee;
}

.inputs>view:first-child {
  width: 130rpx;
  text-align: right;
  height: 80rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.inputs input {
  flex: 1;
  padding: 0 15rpx;
}

.choose-btn {
  display: flex;
  position: relative;
  top: 6rpx;
}



.submit-address {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 2rpx;
  margin: 40rpx 15rpx 15rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 8px #ccc;
}
