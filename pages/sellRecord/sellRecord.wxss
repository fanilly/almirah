/* pages/sellRecord/sellRecord.wxss */

.main {
  padding: 0;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  padding: 0 15rpx;
  background-color: #fff;
  box-shadow: 0 3px 8px #e2e2e2;
  display: flex;
  box-sizing: border-box;
}

.header view {
  width: 150rpx;
  line-height: 100rpx;
  text-align: center;
}

.header view.active {
  border-bottom: 4rpx #1aaade solid;
}

.details-items-wapper {
  width: 100%;
  padding: 15rpx;
  background-color: #fff;
  box-sizing: border-box;
  margin-top: 15rpx;
}

.detail-items {
  display: flex;
  margin-top: 15rpx;
}

.detail-items .lside {
  width: 190rpx;
  height: 190rpx;
}

.details .wapper {
  padding-bottom: 30rpx;
}

.detail-items .lside image {
  width: 100%;
  height: 100%;
}

.detail-items .rside {
  flex: 1;
  padding: 6rpx 15rpx 0;
  box-sizing: border-box;
}

.pro-title {
  height: 34rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.settings {
  display: flex;
  margin-bottom: 0rpx;
}

.settings>view {
  flex: 1;
}

.control {
  text-align: left;
  margin-top: 12rpx;
}

.control view {
  display: inline-block;
  height: 52rpx;
  width: 160rpx;
  border-radius: 26rpx;
  text-align: center;
  line-height: 52rpx;
  margin-right: 15rpx;
  border:1px solid #e2e2e2;
  color: #999;
}

.loading-box {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 2px 4px #ccc;
  margin: 60rpx auto;
}

.btn {
  width: 130rpx;
}
