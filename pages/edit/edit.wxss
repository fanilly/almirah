/* pages/sell/sell.wxss */

page {
  background-color: #fff;
}

.block-title {
  border-bottom: 1px solid #eee;
  margin-bottom: 16rpx;
}

.inputs {
  display: flex;
  align-items: center;
  line-height: 80rpx;
}

.inputs input {
  border-bottom: 1px solid #eee;
  flex: 1;
  padding: 0 15rpx;
}

.inputs>view:first-child {
  width: 150rpx;
  text-align: right;
  height: 80rpx;
  padding-right: 20rpx;
}

.inputs1 {
  margin: 0;
}

.inputs1>view:first-child {
  text-align: left;
  padding-left: 10rpx;
}

.weui-cells {
  margin: 0 20rpx;
}

.choose-btn {
  display: flex;
  position: relative;
  top: 2rpx;
}

.mt30,
.address-detail {
  margin-top: 40rpx;
}

.submit-address {
  width: 92%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  box-shadow: 0 0 8px #ccc;
  position: fixed;
  bottom: 30rpx;
  left: 4%;
}

.xs-inputs {
  display: flex;
  padding: 0 15rpx;
  margin-top: 20rpx;
}

.xs-inputs>view {
  flex: 1;
  display: flex;
}

.xs-inputs>view:last-child {
  padding-left: 15rpx;
}

.xs-inputs>view view:first-child {
  width: 100rpx;
}

.xs-inputs>view input {
  flex: 1;
  border-bottom: 1px solid #eee;
  padding: 0 15rpx;
}

.xs-inputs .choose-btn .btn-box {
  width: 38rpx;
}

.up-img {
  margin-top: 30px;
}

.up-img-box {
  margin: 0 10rpx;
  padding-bottom: 20rpx;
  margin-top: 40rpx;
}

.up-header {
  display: flex;
  padding: 15rpx 15rpx;
}

.up-header view:first-child {
  flex: 1;
}

.up-header view:last-child {
  width: 50rpx;
  text-align: right;
}

.weui-uploader__bd {
  padding: 0 15rpx;
}

.weui-uploader__file {
  position: relative;
}

.del {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  top: 0;
  left: 0;
}

.del view {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  border-radius: 40rpx;
  background-color: #e8380d;
  opacity: .8;
}

.weui-uploader__img {
  width: 76px;
  height: 76px;
}
