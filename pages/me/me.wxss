/* pages/me/me.wxss */

.main {
  width: 100%;
  box-sizing: border-box;
}

.header {
  display: flex;
  height: 250rpx;
  padding: 50rpx;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  background-image: linear-gradient(to bottom, #1aaade, #2e8fde);
}

.box-shadow {
  box-shadow: 0 3rpx 10rpx #ccc;
}

.header>view:first-child {
  width: 150rpx;
}

.header>view:nth-child(2) {
  flex: 1;
  padding-left: 30rpx;
}

.header>view:nth-child(2) view {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header>view:nth-child(2) view:first-child {
  padding-top: 12rpx;
}

.commi {
  margin-top: -6rpx;
}

.header>view:nth-child(3) {
  display: flex;
  align-items: center;
}

.btn-list {
  width: 100%;
  height: 180rpx;
  display: flex;
  background-color: #fff;
  margin-top: 15rpx;
}

.btn-list navigator,
.btn-list>view {
  padding-top: 32rpx;
  flex: 1;
  text-align: center;
  position: relative;
}

.btn-list navigator .pointer {
  width: 18rpx;
  height: 18rpx;
  position: absolute;
  right: 50rpx;
}

.btn-list view .f28,
.btn-list navigator .f28 {
  line-height: 28rpx;
}

.lists-box {
  background-color: #fff;
  margin-top: 15rpx;
}

.lists-box>view,
.lists-box navigator {
  display: flex;
  height: 85rpx;
}

.lists-box>view .flag-icon,
.lists-box navigator .flag-icon {
  width: 76rpx;
  text-align: center;
  padding-top: 15rpx;
  border-bottom: 1rpx solid #e2e2e2;
}

.lists-box>view .text-con,
.lists-box navigator .text-con {
  flex: 1;
  border-bottom: 1rpx solid #e2e2e2;
  line-height: 90rpx;
}

.lists-box>view .xs-arrow,
.lists-box navigator .xs-arrow {
  width: 50rpx;
  text-align: left;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e2e2e2;
}

.lists-box navigator:last-child .flag-icon,
.lists-box navigator:last-child .text-con,
.lists-box navigator:last-child .xs-arrow {
  border-bottom: 0;
}

.weui-footer {
  margin: 40rpx 0;
}
