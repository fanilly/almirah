.pro-items {
  background-color: #fff;
  overflow: hidden;
  border-radius: 4rpx;
  background-color: #fff;
  transition: all .4s ease-in-out;
  width: 100%;
  display: inline-block;
  column-span:all;
}

.lside image {
  display: block;
  width: 100%;
}

.rside {}

.rside {
  position: relative;
  padding: 0 10rpx 15rpx;
}

.rside>view:first-child {
  line-height: 36rpx;
  padding: 6rpx 0;
}

.title {
  margin-top: 15rpx;
}

.price {
  margin-top: 5rpx;
}

.num {
  margin-top: 10rpx;
}

.add-pro-btn {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 0 auto;
  box-shadow: 0 0 15px rgba(150, 150, 150, .1);
  right: 0;
  background-color: #f8fdff;
}

.pro-bottom {
  height: 70rpx;
  text-align: center;
  padding-top: 20rpx;
}

.pro-bottom>view {
  display: inline-block;
}

.cur-num {
  padding: 0 20rpx;
  height: 30rpx;
}

.btns-jx {
  position: relative;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin: 0 auto;
  box-shadow: 0 0 15px rgba(150, 150, 150, .1);
  right: 0;
  background-color: #f8fdff;
  text-align: center;
}

.del-trolley {
  text-align: center;
  position: absolute;
  bottom: 140rpx;
  width: 320rpx;
  height: 80rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  left: 0;
  right: 0;
  margin: auto;
}

.pro-bottom {}

.add-pro-btn image {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
}

.footer {
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  box-shadow: 0 -3rpx 5rpx #eee;
  z-index: 10000;
}

.footer>view:nth-child(1) {
  width: 132rpx;
}

.footer>view:nth-child(2) {
  flex: 1;
  line-height: 120rpx;
}

.footer>view:nth-child(3) {
  width: 300rpx;
  text-align: center;
}

.footer>view:nth-child(3) view {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  width: 90%;
  margin: 20rpx auto;
  box-shadow: 0 0 8px #999;
}


/*trolley control*/

.trolley-box {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  height: 100%;
  background-color: rgba(255, 255, 255, .8);
  z-index: 9999;
  box-sizing: border-box;
  padding: 15rpx;
}

.trolley-control {
  position: fixed;
  width: 96%;
  background-color: #fff;
  height: 620rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  box-shadow: 0 0 20rpx #ccc;
  border-radius: 10rpx;
  padding: 50rpx 0;
}

.trolley-item {
  display: flex;
  padding-right: 15rpx;
  margin-top: 15rpx;
}

.trolley-item view:first-child {
  flex: 1;
  padding-left: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 60rpx;
}

.trolley-item view:nth-child(2) {
  line-height: 60rpx;
  width: 150rpx;
}

.trolley-item view:last-child {
  width: 210rpx;
}

.trolley-item view:last-child text {
  display: inline-block;
  width: 63rpx;
  height: 60rpx;
  background-color: #efeff4;
  color: #666;
  text-align: center;
  line-height: 60rpx;
  font-size: 40rpx;
  vertical-align: top;
}

.trolley-item view:last-child text:first-child {
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
}

.trolley-item view:last-child text:nth-child(2) {
  width: 82rpx;
  background-color: rgba(0, 0, 0, 0);
  font-size: 26rpx;
}

.trolley-item view:last-child text:last-child {
  border-top-right-radius: 4rpx;
  border-bottom-right-radius: 4rpx;
}
