      </view>
      <view class="items-wapper">
        <view class="detail-items">
          <view class="lside">
            <image src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1517215642&di=04749e48f2a385f236a428c99079848c&imgtype=jpg&er=1&src=http%3A%2F%2Fg.hiphotos.baidu.com%2Fimage%2Fpic%2Fitem%2F0823dd54564e9258df7f3f9d9682d158ccbf4e7d.jpg" mode="aspectFill"></image>
          </view>
          <view class="rside f32 gray05">
            <view class="f24 gray04 pro-title">
              连帽中长款羽绒服连帽中长款羽绒服连帽中长款羽绒服
            </view>
            <view class="f24 gray05 settings">
              <view>
                尺码：
                <text class="gray04">L</text>
              </view>
              <view>
                颜色：
                <text class="gray04">红色</text>
              </view>
            </view>
            <view class="f24 gray05 settings">
              <view>
                原价
                <text class="gray04">￥2000</text>
              </view>
              <view>
                现价
                <text class="red-color">￥200</text>
              </view>
            </view>
          </view>
        </view>
        <view class="detail-items">
          <view class="lside">
            <image src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1517215642&di=04749e48f2a385f236a428c99079848c&imgtype=jpg&er=1&src=http%3A%2F%2Fg.hiphotos.baidu.com%2Fimage%2Fpic%2Fitem%2F0823dd54564e9258df7f3f9d9682d158ccbf4e7d.jpg" mode="aspectFill"></image>
          </view>
          <view class="rside f32 gray05">
            <view class="f26 gray04 pro-title">
              连帽中长款羽绒服连帽中长款羽绒服连帽中长款羽绒服
            </view>
            <view class="f26 gray05 settings">
              <view>
                尺码：
                <text class="gray04">L</text>
              </view>
              <view>
                颜色：
                <text class="gray04">红色</text>
              </view>
            </view>
            <view class="f26 gray05 settings">
              <view>
                原价
                <text class="gray04">￥2000</text>
              </view>
              <view>
                现价
                <text class="red-color">￥200</text>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <!-- 地址等备注信息 -->
  <view class="messages">
    <view class="wapper">
      <view class="receipt-address gray01 f28 msg-item2">
        <view>收货地址:</view>
        <view>
          <image src="../../assets/m_list_btns_04.png" style="width:44rpx;height:44rpx;position:relative;top:10rpx;"></image>
          <text style="padding-left: 10rpx;" class="gray04">请选择</text>
        </view>
      </view>
      <view class="gray02">
        <navigator url="" class="address-item">
          <view>
            <image src="../../assets/lg-address.png" style="width:50rpx;height: 60rpx"></image>
          </view>
          <view>
            <view>
              <view class="gray04 f28">
                <text class="gray01 f28">姓名：</text>卡尔玛</view>
              <view class="gray04 f28">
                <text class="gray01 f28">手机号：</text>16616616666
                <image src="../../assets/switch.png" style="width:30rpx;height:30rpx;position: absolute;right: 10rpx;top:12rpx;"></image>
              </view>
            </view>
            <view class="gray04 f28">
              <text class="gray01 f28">地址：</text>神秘的召唤师峡谷 南艾欧尼亚 纳沃里省某村庄古董店
            </view>
          </view>
        </navigator>
      </view>
      <view class="remarks gray01 f28">
        <view>卖家留言:</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell">
            <view class="weui-cell__bd">
              <textarea maxlength="100" show-confirm-bar="false" focus="{{focus}}" class="weui-textarea" bindinput="handleQuestionContent" placeholder="选填：请输入留言信息（长度不得大于300个字符）" style="height: 180rpx" class="f24" />
              <view class="weui-textarea-counter f24">{{textareaValueLen}}/300</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="placeholder-box120"></view>
  <!-- 底部 -->
  <view class="footer">
    <view class="f28">
      总计：
      <text class="red-color f32">￥300.00</text>
    </view>
    <view class="main-bg f32 main-bgi">
      提交订单
    </view>
  </view>
</view>
