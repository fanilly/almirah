/* pages/evaluate/evaluate.wxss */

page {
  background-color: #fff;
}

.header {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 24rpx;
  height: 80rpx;
}

.header view:first-child {
  width: 40rpx;
  position: relative;
  height: 40rpx;
}

.header view:first-child image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
}

.header view:last-child {
  flex: 1;
  font-size: 36rpx;
  color: #666666;
  padding-left: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.main {
  padding: 0 15rpx;
}

.main>view {
  display: flex;
  height: 40rpx;
  padding: 19rpx 0;
}

.main>view view {
  width: 68rpx;
  text-align: center;
}

.main>view image {
  width: 42rpx;
  height: 40rpx;
}

.main>view view:first-child image {
  width: 37rpx;
  height: 36rpx;
}

.main>view view:first-child {
  width: 70rpx;
}

.main>view view:last-child {
  flex: 1;
  text-align: left;
  font-size: 30rpx;
  color: #666666;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 30rpx;
}

.footer {
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.footer text {
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #02c1c9;
  text-align: center;
  border-radius: 6rpx;
  margin-top: 50rpx;
}

.title {
  padding: 10rpx 15rpx;
}
